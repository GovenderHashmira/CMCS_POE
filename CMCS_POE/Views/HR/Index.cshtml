@model IEnumerable<CMCS_POE.Models.AppUser>

@using Microsoft.AspNetCore.Identity
@inject UserManager<CMCS_POE.Models.AppUser> UserManager

@{
    ViewData["Title"] = "All Users";
}

<h2>All Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Hourly Rate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
            var roles = await UserManager.GetRolesAsync(user); 
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@string.Join(", ", roles)</td>
            <td>@user.HourlyRate</td>
            <td>
                <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
