@model IEnumerable<CMCS_POE.Models.Claim>

@{
    ViewData["Title"] = "All Claims";
}

<h2>All Claims</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
            <th>Submission Date</th>
            <th>Approval Date</th>
            <th>Notes</th>
            <th>Documents</th>
            <th>Action</th> 
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Status</td>
                <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                <td>@(claim.ApprovalDate.HasValue? claim.ApprovalDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>@claim.Notes</td>
                <td>
                    @if (claim.DocumentUploads != null && claim.DocumentUploads.Any())
                    {
                        <ul>
                            @foreach (var doc in claim.DocumentUploads)
                            {
                                <li>
                                    <a href="@doc.DocumentPath" target="_blank">@doc.DocumentName</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No documents</span>
                    }
                </td>
                <td>
                    <a asp-action="ClaimDetails"
                       asp-route-id="@claim.Id"
                       class="btn btn-primary btn-sm">
                        View / Manage
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
